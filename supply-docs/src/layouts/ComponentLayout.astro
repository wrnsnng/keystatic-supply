---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  description: string;
  category: 'inputs' | 'navigation' | 'layout' | 'feedback' | 'data-display' | 'overlays';
  status: 'planned' | 'in-progress' | 'completed';
}

const { title, description, category, status } = Astro.props;

// Status class mapping 
const statusClass = {
  'planned': 'badge badge-planned',
  'in-progress': 'badge badge-in-progress',
  'completed': 'badge badge-completed'
}[status];

// Category class mapping
const categoryClass = {
  'inputs': 'badge category-inputs',
  'navigation': 'badge category-navigation',
  'layout': 'badge category-layout',
  'feedback': 'badge category-feedback',
  'data-display': 'badge category-data-display',
  'overlays': 'badge category-overlays',
}[category];

// Get text labels
const statusLabel = {
  'planned': 'Planned',
  'in-progress': 'In Progress',
  'completed': 'Completed'
}[status];

const categoryLabel = {
  'inputs': 'Inputs',
  'navigation': 'Navigation',
  'layout': 'Layout',
  'feedback': 'Feedback',
  'data-display': 'Data Display',
  'overlays': 'Overlays',
}[category];
---

<Layout title={`${title} Component | Design System`}>
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <header class="mb-8">
      <div class="flex flex-wrap items-center gap-4 mb-2">
        <h1 class="text-3xl font-bold">{title}</h1>
        <div class="flex gap-2">
          <span class={categoryClass}>
            {categoryLabel}
          </span>
          <span class={statusClass}>
            {statusLabel}
          </span>
        </div>
      </div>
      <p class="text-lg text-medium-contrast">{description}</p>
    </header>
    
    <div class="prose max-w-none">
      <slot />
    </div>
  </div>
</Layout>

<style>
  /* Component-specific styles */
  .prose {
    color: var(--text-high-contrast);
  }
  
  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    color: var(--text-high-contrast);
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }
  
  .prose h2 {
    font-size: 1.5rem;
    border-bottom: 1px solid var(--border-subtle);
    padding-bottom: 0.25em;
  }
  
  .prose p {
    margin-bottom: 1em;
  }
  
  .prose code {
    background-color: var(--background-subtle);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.9em;
  }
  
  .prose pre {
    background-color: var(--slate2);
    padding: 1em;
    border-radius: 6px;
    overflow-x: auto;
  }
  
  .prose pre code {
    background-color: transparent;
    padding: 0;
    font-size: 0.9em;
  }
  
  .prose ul, .prose ol {
    margin-bottom: 1em;
    padding-left: 1.5em;
  }
  
  .prose li {
    margin-bottom: 0.5em;
  }
</style> 